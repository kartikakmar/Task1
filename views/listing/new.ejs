
<% layout('/Layout/boilerplate') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Your Flat</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #646262;
            font-family: Arial, sans-serif;
        }
        .container {
            max-width: 600px;
            margin: auto;
            padding-top: 30px;
            background: rgb(156, 155, 155);
            border-radius: 10px;
            padding: 20px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
            color: #161718;
        }
        label {
            font-weight: bold;
            margin-top: 10px;
        }
        input, select {
            width: 100%;
            padding: 8px;
            margin-top: 5px;
            border: 1px solid #141414;
            border-radius: 5px;
            transition: border-color 0.3s;
        }
        input:focus, select:focus {
            border-color: #007bff;
            outline: none;
        }
        .btn-submit {
            align-items: center;
            background-color: #007bff;
            color: rgb(240, 240, 240);
            border: none;
            padding: 10px;
            width: 50%;
            margin-left: 25%;
            margin-top: 20px;
            border-radius: 5px;
            transition: background 0.3s;
        }
        .btn-submit:hover {
            background-color: #0056b3;
        }
        .error {
            color: red;
            font-size: 0.9em;
            display: none;
        }
    </style>
</head>
<body>

    <div class="container">
        <h1>Add User Details</h1>
        <form method="POST" action="/user" onsubmit="return validateForm()">

            <label>Enter User Name</label>
            <input name="name" type="text" placeholder="Enter your name" required>

            <label>Enter Position</label>
            <input name="position" type="text" placeholder="Enter your position" required>

            <label>Enter Department</label>
            <input name="department" type="text" placeholder="Enter your department" required>

            <label>Enter Age</label>
            <input name="age" type="number" placeholder="Enter age" min="18" max="100" required>

            <label>Enter Image URL</label>
            <input name="image" type="text" placeholder="Enter image URL" value="/user.jpg">

            <label>Enter Contact Number</label>
            <input name="mobilenumber" type="tel" placeholder="Enter your mobile number" required pattern="^\d{10}$" title="Enter a 10-digit mobile number">
            <span class="error" id="mobileError">Enter a valid 10-digit mobile number.</span>

            <label>Enter Email</label>
            <input name="email" type="email" placeholder="Enter your email" required>

            <label>Enter Password</label>
            <input name="password" type="password" placeholder="Enter your password" required>

            <label>Enter ID</label>
            <input name="id" type="number" placeholder="Enter ID" required>

            <label>Enter Gender</label>
            <select name="gender" required>
                <option value="" disabled selected>Select gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Other">Other</option>
            </select>

            <button type="submit" class="btn-submit">Add</button>
        </form>
    </div>

    <script>
        function validateForm() {
            let isValid = true;
            // Validate Mobile Number
            let mobileInput = document.querySelector('input[name="mobilenumber"]');
            let mobileError = document.getElementById('mobileError');
            let mobilePattern = /^\d{10}$/;
            if (!mobilePattern.test(mobileInput.value)) {
                mobileError.style.display = 'block';
                isValid = false;
            } else {
                mobileError.style.display = 'none';
            }
            return isValid;
        }
    </script>

</body>
</html>
