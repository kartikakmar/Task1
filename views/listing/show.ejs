<% layout('/Layout/boilerplate') %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="show.css">
</head>
<style>
    body {
    background-color: #646262;
    font-family: Arial, sans-serif;
}
.container {
    max-width: 800px;
    margin: auto;
    padding-top: 20px;
}
.card {
    border-radius: 10px;
    overflow: hidden;
    transition: transform 0.3s ease-in-out;
    margin-bottom: 20px;
    display: flex;
    align-items: center;
    padding: 15px;
}
.card{
    background: rgb(156, 155, 155);
}
.card:hover {
    transform: scale(1.03);
}
.profile-img {
    width: 100px;
    height: 100px;
    object-fit: cover;
    border-radius: 50%;
    border: 3px solid #007bff;
    margin-right: 15px;
}
.card-body {
    flex: 1;
}
.btn-edit {
    background-color: #007bff;
    color: white;
}
.btn-edit:hover {
    background-color: #0056b3;
}
.btn-delete {
    background-color: #dc3545;
    color: white;
}
.btn-delete:hover {
    background-color: #c82333;
}
p{
    color: rgb(5, 5, 5);
}

</style>
<body>
    <div class="container">
        <% for (let results of result) { %>
            <div class="card shadow">
                <img src="<%= results.image %>" alt="User Image" class="profile-img">
                <div class="card-body">
                    <h3 class="card-title">Name: <%= results.name %></h3>
                    <p class="card-text"><strong>Age:</strong> <%= results.age %></p>
                    <p class="card-text"><strong>Mobile:</strong> <%= results.mobilenumber %></p>
                    <p class="card-text"><strong>Department:</strong> <%= results.department %></p>
                    <p class="card-text"><strong>Position:</strong> <%= results.position %></p>
                    <p class="card-text"><strong>Email:</strong> <%= results.email %></p>
                    <p class="card-text"><strong>ID:</strong> <%= results.id %></p>
                    
                    <a href="/user/<%= results.id %>/edit" class="btn btn-edit btn-sm">Edit</a>

                    <form method="POST" action="/user/<%= results.id %>?_method=DELETE" class="d-inline">
                        <button type="submit" class="btn btn-delete btn-sm">Delete</button>
                    </form>
                </div>
            </div>
        <% } %>

    </div>

</body>
</html>
