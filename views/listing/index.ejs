
<% layout('/Layout/boilerplate') %>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wanderlust - User Listings</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #646262;
            margin: 0;
            padding: 0;
        }
        .container {
            max-width: 1200px;
            margin: auto;
            padding: 20px;
        }
        h1 {
            text-align: center;
            color: #333;
        }
        .button-container {
            display: flex;
            justify-content: center;
            gap: 15px;
            margin-bottom: 20px;
        }
        button {
            padding: 10px 20px;
            font-size: 16px;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
        }
       
        .create-btn:hover {
            background-color: #0056b3;
        }
       
        .verify-btn:hover {
            background-color: #218838;
        }
        .user-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
        }
        .user-card {
            background: rgb(156, 155, 155);
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }
        .user-card:hover {
            transform: scale(1.05);
        }
        .user-card img {
            width: 100%;
            max-width: 150px;
            height: auto;
            border-radius: 50%;
            margin-bottom: 10px;
        }
        .user-card h2 {
            font-size: 20px;
            margin-bottom: 5px;
        }
        .user-card a {
            text-decoration: none;
            color: #f0f2f3;
            font-weight: bold;
        }
        .user-card a:hover {
            color: #0056b3;
        }
        .user-card p {
            color: #8b8b8b;
            font-size: 14px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="user-list">
            <% for (let data of user) { %>
                <div class="user-card">
                    <img src="<%=data.image%>" alt="User Image">
                    <h2><a href="/user/<%=data.id%>/show"><%= data.name %></a></h2>
                    <h2><%= data.position %></h2>
                </div>
            <% } %>
        </div>
    </div>

</body>
</html>
