<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Effective Navigation</title>
    <link rel="stylesheet" href="/naviagation.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar">
        <ul class="nav-links">
            <li><a href="/home">Home</a></li>
            <li><a href="/user">About</a></li>
        </ul>

        <div class="logo">
            <h3>User Verification System</h3>
        </div>
        
        <div class="nav-buttons">
            <a href="/user/verify" class="btn verify-btn">Verify</a>
            <a href="/user/new" class="btn add-btn">Add New</a>
        </div>

        <div class="menu-toggle" onclick="toggleMenu()">
            â˜°
        </div>
    </nav>

    <!-- JavaScript for Responsive Menu -->
    <script>
        function toggleMenu() {
            const navLinks = document.querySelector(".nav-links");
            navLinks.classList.toggle("active");
        }
    </script>
</body>
</html>
